@model Modeln.ApplicationUser
@{ 
    List<Modeln.ApplicationRole> roles = ViewBag.Roles;
    ViewBag.Title = "Roles";
}

<h2>Roles</h2>


<div class="form-group">
    <label>Email</label>
    <input class="form-control" type="text" readonly value=" @Model.Email" />
    <label>Nombre</label>
    <input class="form-control" type="text" readonly value=" @Model.Nombre" />
    <label>Apellido</label>
    <input class="form-control" type="text" readonly value=" @Model.Apellido" />



</div>
<hr/>

@using (Html.BeginForm("AddRoleToUser", "User", FormMethod.Post))
{
    <div class= "form-group" >
        <input type="hidden" name="UserId" value="@Model.Id"/>
        <select class="form-control" name="RoleId">
            @foreach (var r in roles)
            {
                <option value="@r.Id">@r.Name</option>
            }

        </select>


    </div>
    <button type="submit" class="btn btn-default">Otorgar Permiso</button>
}

